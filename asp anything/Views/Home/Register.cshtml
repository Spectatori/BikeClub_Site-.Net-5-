@model asp_anything.Models.User
<title>Регистрация</title>
<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/css/ss/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <link href="~/css/sb-admin-2.css" type="text/css"rel="stylesheet">
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Добре дошъл!</h1>
                                    </div>
                                    <form asp-action="RegisterButton" class="user" runat="server">
                                        <h4 class="fs-600 fc-white">Регистрация</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nickname" class="control-label fc-white"></label>
                    <input asp-for="Nickname" class="form-control submissionfield" />
                    <span asp-validation-for="Nickname" class="text-danger fc-white"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label fc-white"></label>
                    <input asp-for="Password" class="form-control submissionfield" type="password"/>
                    <span asp-validation-for="Password" class="text-danger" type="password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label fc-white"></label>
                    <input asp-for="Email" class="form-control submissionfield" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input type="submit" value="Регистрация" class="btn btn-primary btn-user btn-block" />
                
                <div class="form-group">
                </div>
                                    </form>
                                    
                                    <hr />
                                    <div class="text-center">
                                        <a class="small" asp-page="/forgotten-password">Забравена парола?</a>
                                    </div>
                                    <div class="text-center">
                                        <a  class="small" asp-controller="Home" asp-action="Login">Вход</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>

</html>
